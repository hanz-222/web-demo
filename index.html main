<body>

    <div class="card">
        <h2>Clicker Counter</h2>
        <h1 id="countText">0</h1>
        <button onclick="increment()">Click Me!</button>
        <button onclick="reset()" style="background-color: #6c757d;">Reset</button>
    </div>

    <script>
        l
        let count = 0;
        const display = document.getElementById('countText');

        function increment() {
            count++;
            display.innerText = count;
        }

        function reset() {
            count = 0;
            display.innerText = count;
        }
    </script>

</body>
